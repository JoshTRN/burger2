<div class="container-fluid text-center">
    <div class="jumbotron container-fluid">
        <h1 class="text-center">Burger Eater</h1>
    </div>

    <div class="container">
        <form action="/burgers/add" method="POST">
            <input type="text" name="burger_name" class="form-control" id="enter_text" placeholder="Add a burger you'd like to eat...">
            <br>
            <button type="submit" class='btn btn-primary btn-lg'>ADD BURGER</button>
        </form>
    </div>
    <br>

    <div class="row">

        <div class=" col-sm-6 text-center" style="max-height: 20vh;overflow-y: scroll;">
            {{#each burger_data}} {{#unless this.devoured}}
            <div class="text-center container" style="background: lightgray; border: solid 1px gray; border-radius: 5px;">
                <div class="row">
                    <form class="col-sm-12" method="POST" action="/burgers/update?_method=PUT">
                        <div class="row">
                            <p class="col-sm-6" style="margin: auto;">{{this.id}}: {{this.burger_name}}</p>
                            <input type="hidden" name="burger_id" type="text" value="{{this.id}}">
                            <button class="btn btn-primary" type="submit" style="float: right;">Devour</button>
                        </div>
                    </form>
                </div>
            </div>
            {{/unless}} {{/each}}
        </div>

        <div class="col-sm-6 text-center" style="max-height: 20vh; overflow-y: scroll">
            {{#each burger_data}} {{#if this.devoured}}
            <input type="text" class="form-control delete"
            id="{{this.id}}" placeholder="{{this.id}}: {{this.burger_name}}" readonly> {{/if}} {{/each}}
        </div>
    </div>

</div>